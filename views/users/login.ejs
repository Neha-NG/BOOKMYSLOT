<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h3 class="col-6 offset-3">Login</h3>
    <br /><br />
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username"  type="text" class="form-control" placeholder="Enter username" required>
                <div class="invalid-feedback">
                    Please enter your username.
                </div>
            </div>
<!-- 
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email"  type="email" class="form-control" placeholder="Enter email" required>
                <div class="invalid-feedback">
                    Please enter a valid email.
                </div>
            </div> -->

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password"  type="password" class="form-control" placeholder="Enter password" minlength="6" required>
                 <div class="invalid-feedback">
                    Minimum 6 characters.
                </div>
            </div>

            <!-- <input type="hidden" name="role" value="student"> -->

            <button class="btn btn-success">Login</button>
            
        </form>
    </div>
</div>